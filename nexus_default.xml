<?xml version="1.0" encoding="UTF-8"?>
<manifest>

    <remote name="nexus"
            fetch="https://github.com"
            revision="nx-8.0" />

    <remote name="fdroid" fetch="https://gitlab.com/" />

    <!-- NexusOS -->
    <project path="manifest" name="TeamNexus/android" remote="nexus" />
    <project path="build/make" name="TeamNexus/android_build" remote="nexus" >
        <copyfile src="core/root.mk" dest="Makefile" />
        <linkfile src="CleanSpec.mk" dest="build/CleanSpec.mk" />
        <linkfile src="buildspec.mk.default" dest="build/buildspec.mk.default" />
        <linkfile src="core" dest="build/core" />
        <linkfile src="envsetup.sh" dest="build/envsetup.sh" />
        <linkfile src="target" dest="build/target" />
        <linkfile src="tools" dest="build/tools" />
    </project>

    <project path="bionic" name="TeamNexus/android_bionic" groups="pdk" remote="nexus" />
    <project path="frameworks/base" name="TeamNexus/android_frameworks_base" remote="nexus" />
    <project path="frameworks/native" name="TeamNexus/android_frameworks_native" remote="nexus" />
    <project path="hardware/interfaces" name="TeamNexus/android_hardware_interfaces" groups="pdk" remote="nexus" />
    <project path="hardware/libhardware" name="TeamNexus/android_hardware_libhardware" remote="nexus" />
    <project path="packages/apps/Settings" name="TeamNexus/android_packages_apps_Settings" groups="pdk-fs" remote="nexus" />
    <project path="prebuilts/linaro" name="TeamNexus/android_prebuilts_linaro" groups="pdk,linux,x86_64" remote="nexus" />
    <project path="system/core" name="TeamNexus/android_system_core" groups="pdk" remote="nexus" />

    <!-- NexusOS additions -->
    <project path="vendor/nexus" name="TeamNexus/android_vendor_nexus" remote="nexus" />
    <project path="packages/apps/FDroidPrivilegedExtension"
             name="fdroid/privileged-extension.git"
             remote="fdroid"
             revision="refs/tags/0.2.7" />

</manifest>
